<% if (success && success.length) { %>
    <div class="col-6 offset-3 alert alert-success alert-dismissable fade show" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <%  } %>

<% if (error && error.length) { %>
    <div class="col-6 offset-3 alert alert-warning alert-dismissable fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <%  } %>  