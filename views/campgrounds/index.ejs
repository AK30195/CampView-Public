<% layout('layouts/boilerplate') %>
    <header>
        <div class="row">
            <div class="col-10 mb-3" id="cluster-map""></div>
        </div> 
        <div>
            <h1>All Campgrounds</h1>
        </div>
    </header>
    <div>
        <a class=" btn btn-primary mb-3 mt-3" href="/campgrounds/new">Add Campground</a>
    </div>
    <div>
        <% for (let campground of campgrounds) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if (campground.images.length) {%>
                        <img src="<%= campground.images[0].url %>" alt="" crossorigin="anonymous" class="img-fluid">
                        <% } else { %>
                            <img src="https://res.cloudinary.com/dfmhofkkc/image/upload/v1750949868/CampView/sudlhwrsmutryfj0jynx.jpg" 
                            crossorigin="anonymous" alt="" class="img-fluid">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h4><a href="/campgrounds/<%=campground._id%>"><%= campground.title %></a></h4>
                            <h5><%= campground.location %></h5>
                            <p class="card-text"><%= campground.description %></p>
                        </div>
                    </div>
                </div>
            </div> 
        <% } %>
    </div>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const campgrounds = {features: <%-JSON.stringify(campgrounds)%>};
    </script>
    <script src="/scripts/clusterMap.js"></script>
    
   
